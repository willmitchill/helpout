<% if current_user %>
  <h2> Welcome, <%= @current_user.username.capitalize %>!</h2>
<% end %>

<h1>User Profile</h1>
<div class="container">
  <form action='/user_profile' method="post" enctype="multipart/form-data">
    <div>
      <label>Profile Picture</label>
      <input type="file" name="uploaded_file">
    </div>
    <div>
      <button type="submit">Upload!</button>
    </div>
  </form>
    <div id='chill'><img src='<%= @user.file.url %>'/></div>
</div>
