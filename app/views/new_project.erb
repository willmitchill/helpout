
<div class="container" align="center">
  
  <h1>New Project</h1>

  
  <div class="jumbotron" id="jumboform">
    <form action='/new_project' method="post" class="form-horizontal">
      <div class="form-group">
        <label class="control-label col-xs-2">Name</label>
        <div class="col-xs-10">
          <input type="text" class="form-control" name="name" placeholder="Name" required>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-xs-2">Start Date</label>
        <div class="col-xs-10">
          <input type="text" class="form-control" name="start_date" placeholder="Start Date - YYYY/MM/DD" required>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-xs-2">End Date</label>
        <div class="col-xs-10">
          <input type="text" class="form-control" name="end_date" placeholder="End Date - YYYY/MM/DD" required>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-xs-2">Location</label>
        <div class="col-xs-10">
          <input type="text" class="form-control" name="location" placeholder="Location" required>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-xs-2">Bio</label>
        <div class="col-xs-10">
          <input type="text" class="form-control" name="bio" placeholder="Bio" required>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-xs-2">Number of Volunteers</label>
        <div class="col-xs-10">
          <input type="text" class="form-control" name="number_of_vols" placeholder="Number of Volunteers" required>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-xs-2">Project's Youtube URL</label>
        <div class="col-xs-10">
          <input type="text" class="form-control" name="youtube" placeholder="Project's Youtube URL" required>
        </div>
      </div>

      <div>
        <input type="submit" class="btn btn-default" value="Submit">
        <input type="reset" class="btn btn-default" value="Reset">
      </div>
    </form>
  </div>
</div>
